<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Inwritten story by {{user_data.username}} {{user_data.email}}">
  <meta name="author" content="{{user_data.firstName}} {{user_data.lastName}}">

  <title>{{user_data.username}} | Blog</title>

  <!-- Bootstrap core CSS -->
<link href="/views/template-starter-02/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/comment.css" rel="stylesheet">

  <!-- Custom fonts for this template -->
  <link href="/views/template-starter-02/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

  <!-- Custom styles for this template -->
  <link href="/views/template-starter-02/css/clean-blog.css" rel="stylesheet">

  <link href="/views/template-starter-02/editor.css" rel="stylesheet">
  <link href="/views/template-starter-02/article.css" rel="stylesheet">

</head>

<body>

  <!-- Navigation -->
   <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand" href="/">Inwritten</a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive"
        aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
			<li class="nav-item">
			<a class="nav-link active" href="/user/blog/{{user_data.username}}">Blog </a>
			</li>
	
			<li class="nav-item">
			<a class="nav-link" href="/user/profile/{{user_data.username}}">Author</a>
			</li>
		</ul>
      </div>
    </div>
  </nav>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('{{user_data.display_picture}}')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Stories by {{user_data.username}}</h1>
            <span class="subheading">{{user_data.email}}</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container"> 
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-3">
        <h3>Recent Stories</h3>
        <hr>

  <div class="card-deck">

  {{#each data}}

  <div class="card">
    <img class="card-img-top" src="{{featured_image}}" alt=`{{title}} by{{author}}`/>
    <div class="card-body">
     <a href="{{post_link}}" target="__blank"> <h5 class="card-title">{{title}}</h5></a>
      <p class="card-text">{{description}}</p>
      <p class="card-text"><small class="text-muted">{{createdAt}}</small></p>
    </div>
  </div>



  {{/each}}
 
</div>

































