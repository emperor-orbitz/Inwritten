    <section class="site-section py-lg">
      <div class="container">
        
        <div class="row blog-entries element-animate">

          <div class="col-md-12 col-lg-8 main-content">
            <img src="{{data.featured_image}}" alt="{{data.description}}" class="img-fluid mb-5">
             <div class="post-meta">
                        <span class="author mr-2"><img src="{{ author_data.display_picture }}" alt="{{ author_data.username }} profile picture" class="mr-2">{{author_data.username}} </span>&bullet;
                        <span class="mr-2">{{data.createdAt}}</span> &bullet;
                        <span class="ml-2"><span class="fa fa-comments"></span> 3</span>
                      </div>
            <h1 class="mb-4">{{data.title}}</h1>
            
            <a class="category mb-5" href="#">{{data.category}}</a>
           
            <div class="post-content-body">

			{{{ data.body_html }}}


            </div>

            
            <div class="pt-5">
              <p>Category: {{data.category}}  Tags: 
				{{#each tag_data}}
				<a href="#">{{this}}</a>, 
				{{/each}}
				</p>
            </div>


            <div class="pt-5">
              
      {{>comments}}
                
               
              
              <!-- END comment-list -->
              
         
            </div>

          </div>

          <!-- END main-content -->

          <div class="col-md-12 col-lg-4 sidebar">
            <div class="sidebar-box search-form-wrap">
              <form action="#" class="search-form">
                <div class="form-group">
                  <span class="icon fa fa-search"></span>
                  <input type="text" class="form-control" id="s" placeholder="Type a keyword and hit enter">
                </div>
              </form>
            </div>
            <!-- END sidebar-box -->
            <div class="sidebar-box">
              <div class="bio text-center">
                <img src="{{author_data.display_picture}}" alt="Image Placeholder" class="img-fluid">
                <div class="bio-body">
                  <h2>{{author_data.username}}</h2>
                  <p>{{author_data.bio}}</p>
                  <p><a href="/user/profile/{{data.authorId.username}}" class="btn btn-primary btn-sm rounded">Read my bio</a></p>
                  <p class="social">
                    <a href="//{{social_data.facebook_link}}" class="p-2"><span class="fa fa-facebook"></span></a>
                    <a href="//{{social_data.instagram_link}}" class="p-2"><span class="fa fa-instagram"></span></a>
                    <a href="//{{social_data.youtube_link}}" class="p-2"><span class="fa fa-youtube-play"></span></a>
                  </p>
                </div>
              </div>
            </div>
            <!-- END sidebar-box -->  
            <div class="sidebar-box">
              <h3 class="heading">Popular Posts</h3>
              <div class="post-entry-sidebar random-interests">
                
              </div>
            </div>
            <!-- END sidebar-box -->

           
            <!-- END sidebar-box -->

            <div class="sidebar-box">
              <h3 class="heading">Tags</h3>
              <ul class="tags">
         {{#each tag_data}}
					<li><a href="#">{{this}}</a></li>
				{{/each}}
              </ul>
            </div>
          </div>
          <!-- END sidebar -->

        </div>
      </div>
