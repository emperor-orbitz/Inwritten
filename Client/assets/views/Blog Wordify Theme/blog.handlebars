<!doctype html>
<html lang="en">

<head>
  <title>{{user_data.username}}| Blog</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:300, 400,700|Inconsolata:400,700" rel="stylesheet">

  <link rel="stylesheet" href="/views/{{template_data}}/css/bootstrap.css">
  <link rel="stylesheet" href="/views/{{template_data}}/css/animate.css">
  <link rel="stylesheet" href="/views/{{template_data}}/css/owl.carousel.min.css">

  <link rel="stylesheet" href="/views/{{template_data}}/fonts/ionicons/css/ionicons.min.css">
  <link rel="stylesheet" href="/views/{{template_data}}/fonts/fontawesome/css/font-awesome.min.css">
  <link rel="stylesheet" href="/views/{{template_data}}/fonts/flaticon/font/flaticon.css">

  <!-- Theme Style -->
  <link rel="stylesheet" href="/views/{{template_data}}/css/style.css">
</head>

<body>


  <div class="wrap">

    <header role="banner">
      <div class="top-bar">
        <div class="container">
          <div class="row">
            <div class="col-9 social">
              <a href="//{{social_data.facebook_link}}"><span class="fa fa-facebook"></span></a>
              <a href="//{{social_data.instagram_link}}"><span class="fa fa-instagram"></span></a>
              <a href="//{{social_data.youtube_link}}"><span class="fa fa-youtube-play"></span></a>
            </div>
            <div class="col-3 search-top">
              <!-- <a href="#"><span class="fa fa-search"></span></a> -->
              <!--      <form action="#" class="search-top-form">
                  <span class="icon fa fa-search"></span>
                  <input type="text" id="s" placeholder="Type keyword to search...">
                </form>-->
            </div>
          </div>
        </div>
      </div>

      <div class="container logo-wrap">
        <div class="row pt-5">
          <div class="col-12 text-center">
            <a class="absolute-toggle d-block d-md-none" data-toggle="collapse" href="#navbarMenu" role="button"
              aria-expanded="false" aria-controls="navbarMenu"><span class="burger-lines"></span></a>
            <a href="/"><img class="site-logo" src="/images/inwritten-logo.png" style="height:100px" /></a>
          </div>
        </div>
      </div>

      <nav class="navbar navbar-expand-md  navbar-light bg-light">
        <div class="container">


          <div class="collapse navbar-collapse" id="navbarMenu">
            <ul class="navbar-nav mx-auto">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/user/blog/{{user_data.username}}">My Blog</a>
              </li>


              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="category.html" id="dropdown05" data-toggle="dropdown"
                  aria-haspopup="true" aria-expanded="false">Categories</a>
                <div class="dropdown-menu" aria-labelledby="dropdown05">
                  <a class="dropdown-item" href="/stories">Uncategorised</a>
                  <a class="dropdown-item" href="/stories">Food</a>
                  <a class="dropdown-item" href="/stories">Technology</a>
                  <a class="dropdown-item" href="/stories">Music</a>
                  <a class="dropdown-item" href="/stories">News</a>
                </div>

              </li>
              <li class="nav-item">
                <a class="nav-link" href="/user/profile/{{user_data.username}}">About</a>
              </li>

            </ul>

          </div>
        </div>
      </nav>
    </header>
    <!-- END header -->


    <section class="site-section pt-5">
      <div class="container">
        <div class="row mb-4">
          <div class="col-md-6">
            <h2 class="mb-4">Category: All</h2>
          </div>
        </div>
        <div class="row blog-entries">
          <div class="col-md-12 col-lg-8 main-content">
            <div class="row mb-5 mt-5">

              <div class="col-md-12">

                {{#each data}}
                <div class="post-entry-horzontal">
                  <a href="{{post-link}}">
                    <div class="image element-animate" data-animate-effect="fadeIn" style="background-image: url({{featured_image}});"></div>
                    <span class="text">
                      <div class="post-meta">
                        <span class="author mr-2"><img src="{{../user_data.display_picture}}" alt="{{author}}" />@{{author}}</span>&bullet;
                        <span class="mr-2">{{createdAt}}</span> &bullet;
                        <span class="mr-2">{{category}}</span> &bullet;
                        <span class="ml-2"><span class="fa fa-comments"></span> 3</span>
                      </div>
                      <h2>{{title}}</h2>
                    </span>
                  </a>
                </div>
                {{/each}}
                <!-- END post -->

              </div>
            </div>

            <div class="row mt-5">
              <div class="col-md-12 text-center">
                <nav aria-label="Page navigation" class="text-center">
                  <ul class="pagination">
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>

                    <li class="page-item"><a class="page-link" href="#">&gt;</a></li>
                  </ul>
                </nav>
              </div>
            </div>



          </div>

          <!-- END main-content -->

          <div class="col-md-12 col-lg-4 sidebar">

            <!-- END sidebar-box -->
            <div class="sidebar-box">
              <div class="bio text-center">
                <img src="{{user_data.display_picture}}" alt="{{user_data.username}} profile" class="img-fluid">
                <div class="bio-body">
                  <h2>{{user_data.username}}</h2>
                  <p>{{user_data.bio}}</p>
                  <p><a href="/user/profile/{{user_data.username}}" class="btn btn-primary btn-sm rounded">Read my
                      bio</a></p>
                  <p class="social">
                    <a href="//{{social_data.facebook_link}}" class="p-2"><span class="fa fa-facebook"></span></a>
                    <a href="//{{social_data.instagram_link}}" class="p-2"><span class="fa fa-instagram"></span></a>
                    <a href="//{{social_data.youtube_link}}" class="p-2"><span class="fa fa-youtube-play"></span></a>
                  </p>
                </div>
              </div>
            </div>
            <!-- END sidebar-box -->
            <div class="sidebar-box">
              <h3 class="heading">Popular Posts</h3>
              <div class="post-entry-sidebar random-interests">

              </div>
            </div>
            <!-- END sidebar-box -->

            <div class="sidebar-box">
              <h3 class="heading">Categories</h3>
              <ul class="categories">
                <li><a href="#">Food </a></li>
                <li><a href="#">Technology </a></li>
                <li><a href="#">Lifestyle </a></li>
                <li><a href="#">Business </a></li>
                <li><a href="#">News </a></li>
              </ul>
            </div>
            <!-- END sidebar-box -->

          </div>
          <!-- END sidebar -->

        </div>
      </div>
    </section>

    <footer class="site-footer">
      <div class="container">
        <div class="row mb-5">
          <div class="col-md-4">
            <h3>About Us</h3>
            <p class="mb-4">
              <img src="/images/inwritten-logo-white.png" alt="Our logo" class="img-fluid" style="width:60%">
            </p>

            <p>Inwritten is a top blog site that allows you personalise your blog with creative preset templates.</p>
          </div>
          <div class="col-md-6 ml-auto">
            <div class="row">
              <div class="col-md-7">
                <h3>Latest Post</h3>
                <div class="post-entry-sidebar random-interests">


                </div>
              </div>
              <div class="col-md-1"></div>

              <div class="col-md-4">



                <div class="mb-5">
                  <h3>Social</h3>
                  <ul class="list-unstyled footer-social">
                    <li><a href="https://www.facebook.com/inwritten"><span class="fa fa-facebook"></span> Facebook</a></li>
                    <li><a href="https://www.instagram.com/inwritten_"><span class="fa fa-instagram"></span> Instagram</a></li>

                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 text-center">
            <p class="small">

              Copyright &copy; 2020 <a href="https://inwritten.com" target="_blank">Inwritten</a>

            </p>
          </div>
        </div>
      </div>
    </footer>
    <!-- END footer -->

  </div>

  <!-- loader -->
  <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px">
      <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" />
      <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#f4b214" /></svg></div>

  <script src="/views/{{template_data}}/js/jquery-3.2.1.min.js"></script>
  <script src="/views/{{template_data}}/js/jquery-migrate-3.0.0.js"></script>
  <script src="/views/{{template_data}}/js/popper.min.js"></script>
  <script src="/views/{{template_data}}/js/bootstrap.min.js"></script>
  <script src="/views/{{template_data}}/js/owl.carousel.min.js"></script>
  <script src="/views/{{template_data}}/js/jquery.waypoints.min.js"></script>
  <script src="/views/{{template_data}}/js/jquery.stellar.min.js"></script>
  <script src="/views/{{template_data}}/js/interests.js"></script>


  <script src="/views/{{template_data}}/js/main.js"></script>
</body>

</html>